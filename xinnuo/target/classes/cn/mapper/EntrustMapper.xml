<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.mapper.EntrustMapper">
	<select id="select" resultType="entrust">
		select * from entrust
	</select>
	<select id="reply" resultType="entrust">
		SELECT
		*
		FROM lawyer,entrust WHERE
		entrust.reply=lawyer.id AND entrust.reply=#{id}
	</select>
	<insert id="insert" parameterType="entrust">
		insert into `entrust`
		(`money`,`title`,`content`,`time`,`address`)
		values(#{money},#{title},#{content},NOW(),#{address})
	</insert>
	<select id="selectid" resultType="entrust">
		SELECT * FROM `entrust`WHERE id
		= #{id}
	</select>
	<insert id="inseid" parameterType="reply">
		INSERT INTO
		`reply`(`content`,`entrust_id`) VALUES(#{content},#{entrust_id})
	</insert>
</mapper>
