<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mapper.LawtypeMapper">
<cache eviction="LRU" type="cn.util.RedisCache" />
<resultMap id="categoryMap1" type="Lawtype">
        <id property="id" column="id"></id>
        <result property="typeName" column="typeName"></result>
        <collection property="categoryList" ofType="Lawtype"  column="id" select="getById"/>
    </resultMap>

    <!--根据父类id查找其子类别-->
    <select id="getById" resultMap="categoryMap1" parameterType="int">
        SELECT *
        FROM Lawtype
        WHERE fatherId = #{id}
    </select>

    <!--查找所有类别(递归)-->
    <select id="getAll" resultMap="categoryMap1" parameterType="int">
        SELECT *
        FROM Lawtype
        WHERE fatherId=0
    </select>







<select id="selectLawyer" resultType="Lawyer">
select * from Lawyer where average>=90
</select>

<select id="selectAll" resultType="Lawyer">
select * from Lawyer where 90>average
</select>

</mapper>